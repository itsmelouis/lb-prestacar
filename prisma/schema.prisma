datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Avis {
  id           Int      @id @default(autoincrement())
  prenom       String
  nom          String
  email        String
  message      String
  estValide    Boolean  @default(false)
  estRgpd      Boolean?
  estCondition Boolean?
}

model Voiture {
  id                 Int                @id @default(autoincrement())
  nom                String
  nom_image          String
  description        String
  Categories         VoitureCategorie[]
  Options            Option[]
  GrillesTarifiaires GrilleTarifiaire[]
}

model Categorie {
  id       Int       @id @default(autoincrement())
  nom      String
  Voitures VoitureCategorie[]
}

model VoitureCategorie {
  voitureId    Int
  categorieId  Int
  Voiture      Voiture    @relation(fields: [voitureId], references: [id])
  Categorie    Categorie  @relation(fields: [categorieId], references: [id])
  @@id([voitureId, categorieId])
}

model Option {
  id         Int     @id @default(autoincrement())
  intitule   String
  prix       String
  voitureId  Int
  Voiture    Voiture @relation(fields: [voitureId], references: [id])
}

model GrilleTarifiaire {
  id         Int     @id @default(autoincrement())
  temps      String
  prix       String
  voitureId  Int
  Voiture    Voiture @relation(fields: [voitureId], references: [id])
}

model Utilisateur {
  id       Int    @id @default(autoincrement())
  email    String
  password String
}

model Contact {
  id              Int      @id @default(autoincrement())
  prenom          String
  nom             String
  telephone       String?
  email           String?
  type_prestation String
  date_presation  DateTime
  message         String
  estCondition    Boolean?
  estRgpd         Boolean?
}
